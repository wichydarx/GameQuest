{% for label, messages in app.flashes %}
	{% for message in messages %}
		<div class="container text-right alert alert-{{ label }} alert-dismissible" role="alert">
			<button type="button" class="btn btn-success" data-bs-dismiss="alert" aria-label="Close">
				<i class="fa-solid fa-xmark"></i>
			</button>

			<div class="alert-message">
				{{ message|raw }}
			</div>
		</div>
	{% endfor %}
{% endfor %}
